<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="AppBaseTheme" />

    <style name="SplashTheme" parent="AppBaseTheme">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="GuideTheme" parent="AppBaseTheme">
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="LoginTheme" parent="AppBaseTheme">
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="DialogTheme" parent="AppBaseTheme">
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light" type="text/css">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <!-- tool bar -->
        <item name="colorPrimary">@color/toolbar</item>
        <!-- navigation bar -->
        <item name="android:navigationBarColor">@color/system_bar</item>
        <!-- user input widget -->
        <item name="colorAccent">#88ee0000</item>
        <!-- status bar -->
        <item name="colorPrimaryDark">@color/system_bar</item>
        <item name="android:statusBarColor">@color/system_bar</item>
        <!-- navigation text color -->
        <item name="android:textColorPrimary">@color/toolbar_text</item>
        <item name="android:actionMenuTextAppearance">@style/MenuTextStyle</item>
        <!--<item name="toolbarStyle">@style/Widget.AppCompat.Toolbar</item>-->
        <!--<item name="toolbarNavigationButtonStyle">-->
        <!--@style/Widget.AppCompat.Toolbar.Button.Navigation-->
        <!--</item>-->

        <item name="android:editTextStyle">@style/Widget.AppCompat.EditText</item>
        <item name="editTextBackground">@drawable/abc_edit_text_material</item>
        <item name="editTextColor">?android:attr/textColorPrimary</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:textColor">@color/tv_deep_gray</item>
        <item name="android:actionMenuTextColor">@color/white</item>
    </style>

    <style name="mydrawer" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:colorControlNormal">@android:color/white</item>
    </style>

    <style name="toolbarStyle">
        <item name="toolbarStyle">@style/Widget.AppCompat.Toolbar</item>
        <item name="toolbarNavigationButtonStyle">
            @style/Widget.AppCompat.Toolbar.Button.Navigation
        </item>

        <item name="android:editTextStyle">@style/Widget.AppCompat.EditText</item>
        <item name="editTextBackground">@drawable/abc_edit_text_material</item>
        <item name="editTextColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="MenuTextStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.ActionBarStyle" parent="Widget.AppCompat.ActionBar.Solid" type="text/css">
        <item name="android:titleTextStyle">@style/AppTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="AppTheme.ActionBar.TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title" type="text/css">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextLight">
        <item name="android:textColor">@color/tv_deep_gray</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="TextMiddle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="FloatButtonStyle" parent="Widget.AppCompat.ActionButton">
        <item name="android:stateListAnimator">@anim/fab_anim</item>
        <item name="android:elevation">5dip</item>
        <item name="android:tint">@android:color/white</item>
    </style>

</resources>