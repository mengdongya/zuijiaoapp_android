<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/transparent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="net.zuijiao.android.zuijiao.EditUserInfoActivity"
    android:layout_height="match_parent">

    <EditText
        android:layout_marginTop="20dip"
        android:layout_marginLeft="16dip"
        android:layout_marginRight="16dip"
        android:gravity="top|left"
        android:textColorHint="@color/tv_light_gray"
        android:hint="@string/nick_name_hint"
        android:textColor="@color/tv_deep_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_nick_name_input"
        android:layout_gravity="right" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="1/15"
        android:layout_marginTop="1dip"
        android:id="@+id/tv_et_watcher"
        android:textColor="@color/tv_light_gray"
        android:layout_marginRight="16dip"
        android:textSize="15sp" />

</LinearLayout>