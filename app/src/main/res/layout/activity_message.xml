<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:id="@+id/message_toolbar"
        android:elevation="0dip"
        android:layout_height="@dimen/toolbar_height"
        colorControlNormal="@color/white"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize" />

    <LinearLayout
        android:id="@+id/message_empty_content"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="130dip"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="vertical">

        <ImageView
            android:layout_height="60dip"
            android:layout_width="60dip"
            android:layout_marginTop="20dip"
            android:src="@drawable/message" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:singleLine="false"
            android:text="@string/no_message"
            android:lineSpacingExtra="5dip"
            android:textColor="@color/bg_light_gray"
            android:gravity="center_horizontal" />

    </LinearLayout>

    <ListView
        android:id="@+id/message_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"/>

    <!--<com.zuijiao.view.PagerSlidingTab
        android:id="@+id/message_tabs"
        android:layout_height="55dip"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:elevation="8dip" />

    <android.support.v4.view.ViewPager
        android:background="@color/transparent"
        android:id="@+id/message_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />-->

</LinearLayout>