<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/attendee_banquet_address_image"
        android:layout_width="20dip"
        android:layout_height="20dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:layout_marginRight="10dip"
        android:visibility="gone"
        android:scaleType="center"
        android:src="@drawable/arrow_expend_right" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/attendee_detail_info_item_title"
        android:layout_height="wrap_content"
        android:layout_width="0dip"
        android:layout_weight="1"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="5dip"
        android:textSize="15sp"
        android:gravity="left|center_vertical"
        android:textColor="@color/bg_light_gray"
        android:text="你好" />

    <TextView
        android:layout_toRightOf="@id/attendee_detail_info_item_title"
        android:id="@+id/attendee_detail_info_item_content"
        android:layout_height="wrap_content"
        android:layout_width="0dip"
        android:layout_weight="4"
        android:textSize="15sp"
        android:gravity="left|center_vertical"
        android:layout_marginTop="5dip"
        android:layout_marginLeft="25dip"
        android:textColor="@color/tv_deep_gray"
        android:text="@string/un_setting" />
    </LinearLayout>


