<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/banquet_history_item_image1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_item_image_height"
        android:scaleType="centerCrop"
        android:src="@drawable/empty_view_greeting" />

    <RelativeLayout
        android:id="@+id/banquet_item_text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_round_corner"
        android:paddingBottom="0dip"
        android:paddingLeft="5dip"
        android:paddingRight="10dip"
        android:paddingTop="10dip">

        <TextView
            android:id="@+id/banquet_history_item_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:singleLine="true"
            android:text="Sonian的台味厨房"
            android:textColor="@color/tv_deep_gray"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/banquet_history_item_date1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/banquet_history_item_title1"
            android:layout_marginTop="10dip"
            android:singleLine="true"
            android:text="4月18日 周六 18：0"
            android:textColor="@color/bg_light_gray"
            android:textSize="16dip" />

        <TextView
            android:id="@+id/banquet_history_item_price1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/banquet_history_item_date1"
            android:layout_marginTop="10dip"
            android:singleLine="true"
            android:text="@string/price_per_one"
            android:textColor="@color/tv_red"
            android:textSize="16dip" />

        <TextView
            android:id="@+id/banquet_history_item_situation1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/banquet_history_item_date1"
            android:layout_marginTop="10dip"
            android:singleLine="true"
            android:text="共有5人参加"
            android:textColor="@color/bg_light_gray"
            android:textSize="16dip" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dip"
            android:layout_below="@id/banquet_history_item_price1" />

    </RelativeLayout>
</LinearLayout>