<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="AppBaseTheme" />

    <style name="SplashTheme" parent="AppBaseTheme">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="GuideTheme" parent="AppBaseTheme">
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="LoginTheme" parent="AppBaseTheme">
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="DialogTheme" parent="AppBaseTheme">
        <item name="android:windowIsFloating">true</item>
        <item name="colorAccent">#0000ff</item>
    </style>

    <style name="UserInfoEditTheme" parent="AppBaseTheme">
        <item name="colorAccent">#0000ff</item>
    </style>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light" type="text/css">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <!-- tool bar -->
        <item name="colorPrimary">@color/toolbar</item>
        <!-- navigation bar -->
        <item name="android:navigationBarColor">@color/systembar</item>
        <!-- user input widget -->
        <item name="colorAccent">@color/toolbar</item>
        <!-- status bar -->
        <item name="colorPrimaryDark">@color/systembar</item>
        <item name="android:statusBarColor">@color/systembar</item>
        <!-- navigation text color -->
        <item name="android:textColorPrimary">@color/toolbar_text</item>
        <item name="android:actionMenuTextAppearance">@style/MenuTextStyle</item>
        <item name="colorControlNormal">@color/bg_gray_white</item>
        <item name="android:textColor">@color/tv_deep_gray</item>
        <item name="android:textColorPrimaryDisableOnly">@color/white</item>
    </style>


    <style name="mydrawer" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:colorControlNormal">@android:color/white</item>
    </style>

    <style name="toolbarStyle">
        <item name="toolbarStyle">@style/Widget.AppCompat.Toolbar</item>
        <item name="toolbarNavigationButtonStyle">
            @style/Widget.AppCompat.Toolbar.Button.Navigation
        </item>

        <item name="android:editTextStyle">@style/Widget.AppCompat.EditText</item>
        <item name="editTextBackground">@drawable/abc_edit_text_material</item>
        <item name="editTextColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="MenuTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">22sp</item>
    </style>

    <!--<style name="AppTheme.ActionBarStyle" parent="Widget.AppCompat.ActionBar.Solid" type="text/css">-->
    <!--<item name="android:titleTextStyle">@style/AppTheme.ActionBar.TitleTextStyle</item>-->
    <!--</style>-->

    <style name="AppTheme.ActionBar.TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title" type="text/css">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextLight">
        <item name="android:textColor">@color/tv_deep_gray</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="TextMiddle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:drawableBottom">@drawable/edti_text_bg</item>
    </style>

    <style name="calendar_tv" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/tv_deep_gray</item>
    </style>

    <style name="calendar_tv_header_day_if_month" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/tv_deep_gray</item>
        <item name="android:textSize">22sp</item>
    </style>

</resources>