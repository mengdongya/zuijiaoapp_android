<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/order_detail_item_title"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="8dip"
        android:textSize="15sp"
        android:textColor="@color/tv_deep_gray"
        android:text="@string/industry" />

    <TextView
        android:id="@+id/order_detail_item_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_width="match_parent"
        android:textSize="15sp"
        android:gravity="right"
        android:layout_toRightOf="@id/order_detail_item_title"
        android:layout_marginRight="10dip"
        android:layout_marginTop="8dip"
        android:layout_marginLeft="10dip"
        android:textColor="@color/tv_deep_gray"
        android:text="未设置" />

    <View
        android:layout_height="1dip"
        android:layout_width="match_parent"
        android:layout_margin="8dip"
        android:layout_below="@id/order_detail_item_content"
        android:background="@color/bg_gray_white" />
</RelativeLayout>