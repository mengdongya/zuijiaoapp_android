<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/toolbar"
        android:id="@+id/verify_number_toolbar" />

    <RelativeLayout
        android:layout_height="80dip"
        android:padding="10dip"
        android:layout_width="match_parent">

        <EditText
            android:textColor="@color/tv_deep_gray"
            android:textColorHint="@color/tv_light_gray"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:textSize="18sp"
            android:inputType="number"
            android:hint="@string/input_telephone"
            android:id="@+id/verify_number_et_number" />

        <Button
            android:layout_height="30dip"
            android:layout_width="wrap_content"
            android:enabled="false"
            android:textSize="15sp"
            android:background="@drawable/bg_verify_phone_send_btn"
            android:id="@+id/verify_number_btn_send"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/send_verification_code" />

    </RelativeLayout>

    <EditText
        android:layout_margin="10dip"
        android:layout_height="wrap_content"
        android:textColor="@color/tv_deep_gray"
        android:textColorHint="@color/tv_light_gray"
        android:layout_width="match_parent"
        android:textSize="18sp"
        android:inputType="number"
        android:layout_alignBottom="@+id/verify_number_btn_send"
        android:hint="@string/input_verification_num"
        android:id="@+id/verify_number_et_code" />

</LinearLayout>