<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/receiving_account_toolbar"
        layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@id/receiving_account_toolbar"
        android:orientation="vertical"
        android:layout_height="wrap_content">

    <TextView
        android:textSize="18sp"
        android:textColor="@color/tv_deep_gray"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/account_card"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="30dip" />

    <View
        android:layout_height="2dip"
        android:layout_marginTop="10dip"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:background="@color/black" />

    <LinearLayout
        android:paddingRight="20dip"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingLeft="20dip"
        android:paddingBottom="20dip"
        android:paddingTop="20dip"
        android:orientation="horizontal">

        <TextView
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:paddingLeft="5dip"
            android:textColor="@color/tv_deep_gray"
            android:text="@string/account_name" />

        <TextView
            android:id="@+id/receiving_account_name"
            android:text="如花"
            android:textSize="15sp"
            android:textColor="@color/tv_light_gray"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginLeft="30dip"
            android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

    <View
        android:layout_height="1dip"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:background="@color/bg_gray_white" />

    <LinearLayout
        android:paddingRight="20dip"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingLeft="20dip"
        android:paddingBottom="20dip"
        android:paddingTop="20dip"
        android:orientation="horizontal">

        <TextView
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:paddingLeft="5dip"
            android:textColor="@color/tv_deep_gray"
            android:text="@string/account_bank" />

        <TextView
            android:id="@+id/receiving_account_bank"
            android:text="ICBC"
            android:textSize="15sp"
            android:textColor="@color/tv_light_gray"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginLeft="30dip"
            android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

    <View
        android:layout_height="1dip"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:background="@color/bg_gray_white" />

    <LinearLayout
        android:id="@+id/banquent_order_activity_ll"
        android:paddingRight="20dip"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingLeft="20dip"
        android:paddingBottom="20dip"
        android:paddingTop="20dip"
        android:orientation="horizontal">

        <TextView
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:paddingLeft="5dip"
            android:textColor="@color/tv_deep_gray"
            android:text="@string/card_number" />

        <TextView
            android:id="@+id/receiving_account_cardnumber"
            android:text="6222021561616434535"
            android:textSize="15sp"
            android:textColor="@color/tv_light_gray"
            android:gravity="right"
            android:layout_marginLeft="30dip"
            android:layout_height="wrap_content"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

    <View
        android:layout_height="1dip"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:background="@color/bg_gray_white" />

    </LinearLayout>

    <TextView
        android:text="@string/receiving_account_msg"
        android:textSize="15sp"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dip"
        android:textColor="@color/tv_light_gray"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" />

</RelativeLayout>
