<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".GuideActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/guide_viewpager"
        android:layout_width="match_parent"
        android:layout_marginBottom="90dip"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/guide_dots"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="10dip">

        <View
            android:layout_width="5dip"
            android:layout_height="5dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:background="@drawable/wizard_index_unselected" />

        <View
            android:layout_width="5dip"
            android:layout_height="5dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:background="@drawable/wizard_index_selected" />

        <View
            android:layout_width="5dip"
            android:layout_height="5dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:background="@drawable/wizard_index_selected" />

        <View
            android:layout_width="5dip"
            android:layout_height="5dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:background="@drawable/wizard_index_selected" />
    </LinearLayout>

    <Button
        android:id="@+id/guide_btn"
        android:layout_width="wrap_content"
        android:layout_height="30dip"
        android:layout_marginBottom="20dip"
        android:layout_above="@+id/guide_dots"
        android:layout_centerHorizontal="true"
        android:background="@color/transparent"
        android:text="@string/wizard_btn_text"
        android:visibility="invisible"
        android:textColor="@color/toolbar" />

    <ProgressBar
        android:id="@+id/guide_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/guide_dots"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />
</RelativeLayout>