<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/toolbar"
        android:paddingTop="16dip"
        android:paddingBottom="0dip"
        android:paddingLeft="16dip"
        android:paddingRight="16dip"
        tools:ignore="UselessParent" >

        <TextView
            android:id="@+id/food_detai_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="金汤鱼肉狮子头"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/food_detai_isprivate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="私家"
            android:textColor="@color/main_location"
            android:textSize="15sp" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:paddingBottom="5dip"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="104dip"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/toolbar"
                android:padding="16dip"
                android:orientation="horizontal" >

                <com.zuijiao.view.RoundImageView
                    android:id= "@+id/food_detail_head"
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/detail_show_3" />

                <TextView
                    android:layout_marginLeft="16dip"
                    android:layout_width="wrap_content"
                    android:id="@+id/food_detail_user_name"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_gravity="center_vertical"
                    android:text="丹丹" />

                <TextView
                    android:layout_marginLeft="32dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/main_location"
                    android:layout_gravity="center_vertical"
                    android:text="推荐于昨天"
                    android:id="@+id/food_detail_time" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginBottom="20dip"
                android:elevation="3dip"
                android:background="@drawable/bg_line_with_shadow" />
        </LinearLayout>
        <ImageView
            android:id="@+id/favor_btn"
            android:layout_width="56dip"
            android:layout_height="56dip"
            android:layout_gravity="right"
            android:layout_marginRight="16dip"
            android:background= "@drawable/bg_favor"
            android:elevation = "3dip"
            android:padding="15dip"
            android:layout_marginBottom="3dip"
            android:layout_marginTop="52dip"
            android:src="@drawable/faviro_unclick" />
    </FrameLayout>



</LinearLayout>