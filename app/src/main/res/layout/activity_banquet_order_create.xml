<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/banquet_order_create_tool_bar"
        layout="@layout/toolbar" />

    <ScrollView
        android:id="@+id/banquet_order_create_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/banquet_order_create_tool_bar"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="@string/order_msg"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dip"
                android:layout_marginTop="10dip"
                android:background="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minHeight="50dip"
                android:orientation="horizontal"
                android:paddingLeft="5dip"
                android:paddingRight="5dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/banquet_name"
                    android:textColor="@color/tv_deep_gray"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/banquet_order_create_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:gravity="right"
                    android:textColor="@color/tv_deep_gray"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/bg_gray_white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minHeight="50dip"
                android:orientation="horizontal"
                android:paddingLeft="5dip"
                android:paddingRight="5dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/time"
                    android:textColor="@color/tv_deep_gray"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/banquet_order_create_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:gravity="right"
                    android:textColor="@color/tv_deep_gray"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/bg_gray_white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minHeight="50dip"
                android:orientation="horizontal"
                android:paddingLeft="5dip"
                android:paddingRight="5dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/price"
                    android:textColor="@color/tv_deep_gray"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/banquet_order_create_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:gravity="right"
                    android:textColor="@color/tv_deep_gray"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/bg_gray_white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:paddingLeft="5dip"
                android:paddingRight="5dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/num"
                    android:textColor="@color/tv_deep_gray"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/banquet_order_create_subtract"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="-"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/banquet_order_create_num"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:text="@string/people"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/banquet_order_create_plus"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="+"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/banquet_order_create_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="5dip"
                android:layout_marginTop="5dip"
                android:text="@string/banquent_capacity_muilt"
                android:textColor="@color/bg_light_gray"
                android:textSize="12sp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/bg_gray_white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minHeight="50dip"
                android:orientation="horizontal"
                android:paddingLeft="5dip"
                android:paddingRight="5dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total_price"
                    android:textColor="@color/tv_deep_gray"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/banquet_order_create_total_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:gravity="right"
                    android:textColor="@color/tv_deep_gray"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/bg_gray_white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minHeight="50dip"
                android:orientation="horizontal"
                android:paddingLeft="5dip"
                android:paddingRight="5dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mobile_phone"
                    android:textColor="@color/tv_deep_gray"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/banquet_order_create_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="@string/input_telephone"
                    android:textColor="@color/tv_light_gray"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="20dip"
                    android:layout_height="25dip"
                    android:scaleType="center"
                    android:src="@drawable/arrow_expend_right" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/bg_gray_white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minHeight="50dip"
                android:orientation="horizontal"
                android:paddingLeft="5dip"
                android:paddingRight="5dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/remark"
                    android:textColor="@color/tv_deep_gray"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/banquet_order_create_remark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:gravity="right"
                    android:text="@string/remark_to_host"
                    android:textColor="@color/tv_light_gray"
                    android:textSize="15sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="@color/bg_gray_white" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <View
        android:id="@+id/banquet_create_division"
        android:layout_width="match_parent"
        android:layout_height="8dip"
        android:layout_above="@+id/order_create_bottom"
        android:background="@drawable/bg_input_diviver" />

    <LinearLayout
        android:id="@+id/order_create_bottom"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/order_create_total_price"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15dip"
            android:layout_weight="2"
            android:text="@string/order_total_price"
            android:textColor="@color/banquet_theme"
            android:textSize="18sp" />

        <Button
            android:id="@+id/order_create_pay"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dip"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@drawable/banquet_detail_order_bg"
            android:gravity="center"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:text="@string/order_confirm"
            android:textColor="@color/banquet_theme"
            android:textSize="18sp" />
    </LinearLayout>
</RelativeLayout>