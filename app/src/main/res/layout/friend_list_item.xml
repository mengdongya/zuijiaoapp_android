<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="0dip"
    android:layout_height="wrap_content">

    <com.zuijiao.view.RoundImageView
        android:id="@+id/friend_item_head"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="16dip"
        android:src="@drawable/default_user_head" />

    <LinearLayout
        android:id="@+id/friend_item_texts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dip"
        android:layout_toRightOf="@+id/friend_item_head"
        android:layout_toLeftOf="@+id/friend_item_btn"
        android:orientation="vertical">

        <TextView
            android:id="@+id/friend_item_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#212121"
            android:text="用户1"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/friend_item_user_msg"
            android:layout_width="wrap_content"
            android:text="@string/zuijiao_team"
            android:layout_height="wrap_content"
            android:textColor="#999999"
            android:textSize="15sp" />

    </LinearLayout>


    <Button
        android:id="@+id/friend_item_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="@string/follow"
        android:layout_marginRight="10dip"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:textColor="#999999"
        android:textSize="12sp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_alignLeft="@id/favor_person_container"
        android:layout_below="@id/favor_person_container"
        android:layout_marginLeft="56dip"
        android:layout_alignParentBottom="true"
        android:background="#cccccc" />
</RelativeLayout>