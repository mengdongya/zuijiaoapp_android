<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_radius"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        android:layout_marginTop="0dip"
        android:layout_marginBottom="8dip"
        android:background="@drawable/bg_white_round_corner"
        android:elevation="3dip">

        <ImageView
            android:id="@+id/banquet_history_item_image"
            android:src="@drawable/empty_view_greeting"
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_item_image_height"
            android:scaleType="centerCrop" />

        <TextView
            android:background="@drawable/banquet_list_item_status_bg"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="8dip"
            android:id="@+id/banquet_history_item_status_finished"
            android:layout_marginTop="5dip"
            android:visibility="gone"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:text="@string/banquet_status_end" />

            <TextView
                android:id="@+id/banquet_history_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_below="@id/banquet_history_item_image"
                android:text="Sonian的台味厨房"
                android:layout_marginTop="10dip"
                android:layout_marginLeft="10dip"
                android:gravity="center_vertical|left"
                android:textColor="@color/tv_deep_gray"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/banquet_history_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_marginTop="5dip"
                android:layout_marginLeft="10dip"
                android:layout_below="@id/banquet_history_item_title"
                android:text="4月18日 周六 18：0"
                android:textColor="@color/bg_light_gray"
                android:textSize="16sp" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dip"
            android:layout_marginBottom="10dip"
            android:id="@+id/banquet_history_item_price"
            android:textSize="18sp"
            android:text="10"
            android:textColor="@color/banquet_price_text"
            android:layout_marginLeft="10dip"
            android:layout_below="@id/banquet_history_item_date" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="14sp"
            android:layout_alignBottom="@id/banquet_history_item_price"
            android:text="@string/price_unit"
            android:layout_marginLeft="3dip"
            android:textColor="@color/banquet_price_text"
            android:layout_toRightOf="@id/banquet_history_item_price" />

            <TextView
                android:id="@+id/banquet_history_item_situation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_below="@id/banquet_history_item_date"
                android:layout_marginTop="10dip"
                android:layout_marginRight="10dip"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@id/banquet_history_item_price"
                android:text="共有5人参加"
                android:textColor="@color/bg_light_gray"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dip"
                android:layout_below="@id/banquet_history_item_price"/>


    </RelativeLayout>

</LinearLayout>