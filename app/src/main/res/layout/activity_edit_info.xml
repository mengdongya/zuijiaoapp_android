<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:myattr="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/toolbar"
        android:id="@+id/edit_info_toolbar" />

    <com.zuijiao.view.RoundImageView
        android:id="@+id/edit_info_user_head"
        myattr:border_thickness="1dip"
        myattr:border_outside_color="@color/toolbar"
        myattr:border_inside_color="@color/toolbar"
        android:padding="2dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dip"
        android:layout_width="66dip"
        android:layout_height="66dip"
        android:src="@drawable/default_user_head" />


    <TextView
        android:text="@string/base_info"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginTop="10dip"
        android:id="@+id/edit_info_base_info"
        android:layout_marginLeft="20dip" />

    <View
        android:layout_height="1dip"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="10dip"
        android:background="@color/black" />

    <ListView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingLeft="20dip"
        android:paddingRight="20dip"
        android:id="@+id/edit_info_base_info_lv"
        android:divider="@color/bg_light_gray"
        android:dividerHeight="1dip" />

    <View
        android:layout_height="1dip"
        android:layout_width="match_parent"
        android:background="@color/bg_light_gray"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip" />

    <TextView
        android:text="@string/crazy_experience"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="18sp"
        android:id="@+id/edit_info_crazy_experience"
        android:textColor="@color/black"
        android:layout_marginTop="10dip"
        android:visibility="gone"
        android:layout_marginLeft="20dip" />

    <View
        android:layout_height="1dip"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="10dip"
        android:background="@color/black" />

    <ListView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:id="@+id/edit_info_crazy_experience_lv"
        android:divider="@color/bg_light_gray"
        android:dividerHeight="1dip" />

    <TextView
        android:text="@string/flavor_hobby"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="18sp"
        android:id="@+id/edit_info_favor"
        android:textColor="@color/black"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="20dip" />

    <View
        android:layout_height="1dip"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="10dip"
        android:background="@color/black" />

    <EditText
        android:layout_marginTop="20dip"
        android:layout_marginLeft="16dip"
        android:layout_marginRight="16dip"
        android:layout_marginBottom="10dip"
        android:maxLength="15"
        android:hint="@string/nick_name_hint"
        android:textColor="@color/tv_deep_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right" />

    <GridView
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:visibility="gone"
        android:background="@color/transparent"
        android:id="@+id/edit_info_favor_gv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="5" />
</LinearLayout>