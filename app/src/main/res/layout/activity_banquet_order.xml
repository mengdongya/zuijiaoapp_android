<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/toolbar"
        android:id="@+id/banquet_order_tool_bar" />

    <ScrollView
        android:layout_below="@id/banquet_order_tool_bar"
        android:layout_height="match_parent"
        android:layout_above="@+id/banquet_order_bottom"
        android:layout_width="match_parent">

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:padding="10dip"
            android:orientation="vertical">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/bg_light_gray"
                android:layout_gravity="left"
                android:text="@string/order_msg" />

            <LinearLayout
                android:layout_height="wrap_content"
                android:minHeight="50dip"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:paddingRight="5dip"
                android:paddingLeft="5dip"
                android:orientation="horizontal">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/tv_deep_gray"
                    android:textSize="14sp"
                    android:text="@string/time" />

                <TextView
                    android:id="@+id/banquet_order_banquet_time"
                    android:layout_marginLeft="10dip"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textColor="@color/tv_deep_gray"
                    android:textSize="15sp"
                    android:gravity="right" />
            </LinearLayout>

            <View
                android:layout_height="1dip"
                android:layout_width="match_parent"
                android:background="@color/bg_gray_white" />

            <LinearLayout
                android:layout_height="wrap_content"
                android:minHeight="50dip"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:paddingRight="5dip"
                android:paddingLeft="5dip"
                android:orientation="horizontal">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/tv_deep_gray"
                    android:textSize="14sp"
                    android:text="@string/price" />

                <TextView
                    android:layout_marginLeft="10dip"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:id="@+id/banquet_order_banquet_price"
                    android:textColor="@color/tv_deep_gray"
                    android:textSize="15sp"
                    android:gravity="right" />
            </LinearLayout>

            <View
                android:layout_height="1dip"
                android:layout_width="match_parent"
                android:background="@color/bg_gray_white" />

            <LinearLayout
                android:layout_height="wrap_content"
                android:minHeight="35dip"
                android:layout_width="match_parent"
                android:gravity="bottom"
                android:paddingRight="5dip"
                android:paddingLeft="5dip"
                android:orientation="horizontal">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/tv_deep_gray"
                    android:textSize="14sp"
                    android:text="@string/address" />

                <TextView
                    android:layout_marginLeft="10dip"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:id="@+id/banquet_order_banquet_location"
                    android:textColor="@color/tv_deep_gray"
                    android:textSize="15sp"
                    android:gravity="right" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/banquet_detail_address_notify"
                android:textSize="12sp"
                android:layout_marginTop="5dip"
                android:layout_marginRight="5dip"
                android:textColor="@color/bg_light_gray"
                android:layout_gravity="right" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginTop="10dip"
                android:background="@color/bg_light_gray" />

            <LinearLayout
                android:layout_height="wrap_content"
                android:minHeight="50dip"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:paddingRight="5dip"
                android:paddingLeft="5dip"
                android:orientation="horizontal">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/tv_deep_gray"
                    android:textSize="14sp"
                    android:text="@string/mobile_phone" />

                <TextView
                    android:layout_marginLeft="10dip"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:id="@+id/banquet_order_banquet_phone"
                    android:layout_weight="1"
                    android:text="@string/input_telephone"
                    android:textColor="@color/tv_light_gray"
                    android:textSize="15sp"
                    android:gravity="right" />

                <ImageView
                    android:layout_height="25dip"
                    android:layout_width="20dip"
                    android:src="@drawable/arrow_expend_right"
                    android:scaleType="center" />
            </LinearLayout>

            <View
                android:layout_height="1dip"
                android:layout_width="match_parent"
                android:background="@color/bg_gray_white" />

            <LinearLayout
                android:layout_height="wrap_content"
                android:minHeight="50dip"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:paddingRight="5dip"
                android:paddingLeft="5dip"
                android:orientation="horizontal">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/tv_deep_gray"
                    android:textSize="14sp"
                    android:text="@string/remark" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dip"
                    android:id="@+id/banquet_order_banquet_remark"
                    android:text="@string/remark_to_host"
                    android:textColor="@color/tv_light_gray"
                    android:textSize="15sp"
                    android:gravity="right" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/bg_light_gray" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dip"
                android:text="@string/choose_the_way_to_pay"
                android:textColor="@color/bg_light_gray"
                android:textSize="13sp" />

            <ListView
                android:layout_marginTop="8dip"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:id="@+id/banquet_order_pay_way_list" />


        </LinearLayout>
    </ScrollView>

    <View
        android:id="@+id/banquet_detail_division"
        android:layout_width="match_parent"
        android:layout_height="8dip"
        android:layout_above="@+id/banquet_order_bottom"
        android:background="@drawable/bg_input_diviver" />

    <RelativeLayout
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:id="@+id/banquet_order_bottom"
        android:layout_height="50dip"
        android:layout_gravity="bottom"
        android:layout_width="match_parent">

        <TextView
            android:id="@+id/banquet_order_bottom_price"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="198元/位"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="5dip"
            android:textColor="@color/banquet_theme"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/banquet_order_bottom_pay_way"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginBottom="5dip"
            android:text="使用支付宝进行支付"
            android:layout_marginLeft="10dip"
            android:layout_alignParentBottom="true"
            android:textColor="@color/bg_light_gray2"
            android:textSize="13sp" />

        <Button
            android:background="@drawable/banquet_detail_order_bg"
            android:id="@+id/banquet_order_bottom_pay"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:text="@string/pay_right_now"
            android:gravity="center"
            android:paddingRight="5dip"
            android:paddingLeft="5dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/banquet_theme"
            android:textSize="19sp" />
    </RelativeLayout>
</RelativeLayout>