<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/transparent"
    android:orientation="vertical">


    <com.zuijiao.view.RoundImageView
        android:id="@+id/user_info_favor_item_image"
        android:layout_width="60dip"
        android:scaleType="center"
        android:layout_height="60dip"
        android:background="@drawable/bg_round_gray"
        android:src="@drawable/shanghai" />


    <TextView
        android:textColor="@color/tv_deep_gray"
        android:id="@+id/user_info_favor_item_text"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:text="@string/taste_tag_default_name" />
</LinearLayout>